<!DOCTYPE html>
<html>

<head>
  <title>Salas</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="./styles/style.css">
</head>

<body>
  <div class="flex h-screen">
    <%- include('../components/sidebar.ejs'); %>

      <a href="/adicionar_sala">
        <div class="absolute right-0 mr-8 mt-4 px-4 py-2 bg-blue-300 rounded-lg">
          <span class="no-underline">Adicionar Salas</span>
        </div>
      </a>

      <div class="flex">
        <% if (data[0].length) { for (var i=0; i < data[0].length; i++) { %>
          <div class="h-80 w-80 flex flex-col rounded-3xl overflow-hidden mx-8 mt-16 border-2">
            <div class="bg-gray-400 h-24 ">
              <div class="flex justify-center mt-2">
                <span class="text-2xl">
                  <%= data[0][i].nome %>
                </span>
              </div>
              <div class="flex justify-center mt-4">
                <span>
                  <%= data[2][i][0].nome %>
                </span>
              </div>
            </div>
            <div id="info" class="ml-4 mt-16">
              <div>
                <span class="mt-8">Atividade</span>
              </div>
            </div>
          </div>
          <% } } else{ %>
            <span class="text-xl">Não está em nenhuma sala</span>
            <% } %>
      </div>
</body>

</html>